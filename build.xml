<project default="build">

    <property environment="env"/>

    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="bin/classes"/>
        <javac srcdir="src" destdir="bin/classes">
            <classpath path="${env.ANDROID_HOME}/platforms/android-18/android.jar"/>
        </javac>
    </target>

    <target name="jar">
        <mkdir dir="bin/jar"/>
        <jar destfile="bin/jar/nv-sdk-${VERSION}.jar" basedir="bin/classes"/>
    </target>

    <target name="build" depends="clean, compile, jar"/>
</project>

